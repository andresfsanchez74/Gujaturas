<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/celeste_claro">

    <!-- Header con título "Ventas" -->
    <FrameLayout
        android:id="@+id/headerVentas"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/celeste_claro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/titleVentas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ventas"
            android:textSize="24sp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/gris_oscuro"
            android:layout_gravity="center" />
    </FrameLayout>

    <!-- ScrollView para contener la lista de ventas -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollVentas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_section_white_rounded"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerVentas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnAgregarVenta"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Agregar Venta"
                android:textSize="14sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@android:color/white"
                android:background="@drawable/btn_rounded_turquesa"
                android:layout_gravity="end" />

            <!-- Contenedor que agrupa SOLO "Hoy" y ventasContainer -->
            <LinearLayout
                android:id="@+id/hoyVentasGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="50dp">

                <!-- Texto "Hoy" -->
                <TextView
                    android:id="@+id/tvHoy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hoy"
                    android:textSize="21sp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/gris_oscuro"
                    android:layout_marginStart="2dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Contenedor para las ventas -->
                <LinearLayout
                    android:id="@+id/ventasContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card_celeste"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="16dp">

                    <!-- Item de venta único -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:cardCornerRadius="8dp"
                        android:backgroundTint="@color/celeste_claro"
                        app:cardElevation="0dp">

                        <!-- Contenedor de venta -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <!-- Nombre del Producto -->
                            <TextView
                                android:id="@+id/tvNombreProducto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Ruana Tejida Rosada - Talla M x1"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/gris_oscuro"
                                android:layout_marginBottom="4dp"/>

                            <!-- Precio de la Venta -->
                            <TextView
                                android:id="@+id/tvPrecioVenta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$60,000"
                                android:textSize="18sp"
                                android:fontFamily="@font/roboto_bold"
                                android:textColor="@color/gris_oscuro"
                                android:layout_marginBottom="8dp"/>

                            <!-- Botones para editar y borrar -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end"
                                android:weightSum="2">

                                <ImageButton
                                    android:id="@+id/btnEditarVenta"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icono_editar"
                                    android:contentDescription="Editar venta" />

                                <ImageButton
                                    android:id="@+id/btnBorrarVenta"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/icono_borrar"
                                    android:layout_marginStart="8dp"
                                    android:contentDescription="Borrar venta" />
                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Footer con navegación -->
    <include
        android:id="@+id/footer"
        layout="@layout/activity_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>