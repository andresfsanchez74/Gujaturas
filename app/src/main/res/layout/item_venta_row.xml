<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_section_white_rounded"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- Fila horizontal: descripción + botones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Producto – Talla x1"
            android:fontFamily="@font/roboto_bold"/>

        <ImageButton
            android:id="@+id/btnRestar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icono_restar"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnSumar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icono_agregar"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Precio de línea -->
    <TextView
        android:id="@+id/tvPrecioLinea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="$0"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginTop="4dp"/>

    <!-- Sección de Descuento -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etDescuentoRow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="% Descuento"
                android:inputType="numberDecimal"/>

            <ImageButton
                android:id="@+id/btnCerrarDescuento"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/icono_cerrar"
                android:background="?attr/selectableItemBackgroundBorderless"/>
        </LinearLayout>

        <EditText
            android:id="@+id/etPrecioNuevoRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Precio Nuevo"
            android:inputType="numberDecimal"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</LinearLayout>
